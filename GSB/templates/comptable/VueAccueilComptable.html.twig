{% extends "comptable/navbar.html.twig" %}
{% block title %}
    Comptable
{% endblock %}
{% block body %}
    <style>
        .container {
            position: relative;
            width: 50%;
            margin: auto;
            margin-top: 2em;
            
         }

        .imageaccuil {
            opacity: 1;
            display: block;
            width: 100%;
            height: auto;
            transition: .5s ease;
            backface-visibility: hidden;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            margin-bottom: 25px;
            border-radius: 8px;
        }

        .middle {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%)
          }

          .container:hover .imageaccuil {
            opacity: 0.3;
          }

          .container:hover .middle {
            opacity: 1;
          }

          .text {
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            padding: 16px 32px;
          }

        
        
    </style>
    
<div class="container">
  
    <img class="imageaccuil" src="{{ asset('img/p1.jpg') }}" alt="Cinque Terre">
    <div class="middle">
        <div class="text">Bienvenue {{ app.session.get('user_nom') }} {{ app.session.get('user_prenom') }}  </div>
    </div>
</div>
    
{% endblock %}
